# fly.toml app configuration file generated for fly-dspy-template-example on 2025-12-26T12:26:06-06:00
#
# See https://fly.io/docs/reference/configuration/ for information about how to use this file.
#
# Replace this with your unique app name (e.g., my-cool-dspy-project)
app = "REPLACE_WITH_YOUR_UNIQUE_APP_NAME"
primary_region = 'ord'

[build]

[http_service]
  internal_port = 8080
  force_https = true
  auto_stop_machines = 'stop'
  auto_start_machines = true
  min_machines_running = 0
  max_machines_running = 1
  processes = ['app']

[[vm]]
  memory = '1gb'
  cpus = 1
  memory_mb = 1024

[[mounts]]
  source = "data"
  destination = "/data"
